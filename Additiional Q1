#include <iostream>
#include <vector>
#include <cmath>
using namespace std;

int countPairsWithDiffK(const vector<int>& arr, int k) {
    int count = 0;
    int n = arr.size();

    // Check all pairs (i, j) with i < j
    for (int i = 0; i < n; ++i) {
        for (int j = i + 1; j < n; ++j) {
            if (abs(arr[i] - arr[j]) == k) {
                count++;
            }
        }
    }

    return count;
}

int main() {
    vector<int> arr = {1, 5, 3, 4, 2};
    int k = 2;

    int result = countPairsWithDiffK(arr, k);
    cout << "Count of pairs with difference " << k << ": " << result << endl;

    return 0;
}
